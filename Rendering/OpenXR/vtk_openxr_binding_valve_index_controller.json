{
  "interaction_profile": "/interaction_profiles/valve/index_controller",

  "bindings": {
    "vtk-actions": {
      "sources": [
        {
          "inputs": {
            "pose": {
              "output": "handpose"
            }
          },
          "path": "/user/hand/left/input/aim"
        },
        {
          "inputs": {
            "pose": {
              "output": "handpose"
            }
          },
          "path": "/user/hand/right/input/aim"
        },
        {
          "inputs": {
            "touch": {
              "output": "startmovement"
            },
            "position": {
              "output": "movement"
            }
          },
          // available inputs => x/y (position), force, touch
          "path": "/user/hand/right/input/trackpad"
        },
        {
          "inputs": {
            "pose": {
              "output": "handposehandgrip"
            }
          },
          "path": "/user/hand/right/input/grip"
        },
        {
          "inputs": {
            "pose": {
              "output": "handposehandgrip"
            }
          },
          "path": "/user/hand/left/input/grip"
        },
        {
          "inputs": {
            "click": {
              "output": "showmenu"
            }
          },
          // available inputs => click, touch
          "path": "/user/hand/right/input/a"
        },
        {
          "inputs": {
            "click": {
              "output": "nextcamerapose"
            }
          },
          // available inputs => click, value, touch
          "path": "/user/hand/left/input/trigger"
        },
        {
          "inputs": {
            "click": {
              "output": "triggeraction"
            }
          },
          "path": "/user/hand/right/input/trigger"
        },
        {
          "inputs": {
            "force": {
              "output": "squeezeforce"
            }
          },
          "path": "/user/hand/right/input/squeeze"
        }
      ],
      // TODO add path thumbstick + actions
      // "haptics": [
      //   {
      //     "path": "/user/hand/left/output/haptic",
      //     "output": "haptic"
      //   },

      //   {
      //     "path": "/user/hand/right/output/haptic",
      //     "output": "haptic"
      //   }
      // ]
    }
  }
}
